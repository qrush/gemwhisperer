<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>THE GEM WHISPERER</title>
    <meta name="viewport" content="width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
    <link rel="apple-touch-icon" href="../iui/iui-logo-touch-icon.png" />
    <meta name="apple-touch-fullscreen" content="YES" />
    <style type="text/css" media="screen">@import "/iui/iui.css";</style>
    <script type="application/x-javascript" src="/iui/iui.js"></script>
    <style type="text/css">
      body > ul > li {
        font-size: 20px;
      }
      body > ul > li > a {
        padding-left: 70px;
        padding-top: 13px;
        padding-bottom: 13px;
      }
      li .date {
        font-weight: normal;
        color: #333;
        font-size: 15px;
      }
      li .info {
        color: #777;
        font-size: 15px;
      }
      h2 {
        margin: 10px;
        color: slateblue;
      }
      p {
        margin: 10px;
      }
    </style>
  </head>
  <body>
    <div class="toolbar">
      <h1 id="pageTitle"></h1>
      <a id="backButton" class="button" href="#"></a>
    </div>
    <ul title="The Gem Whisperer" selected="true">
      <% @whispers.each do |whisper| %>
        <li>
          <a target="_blank" title="<%= whisper.name %>" href="<%= whisper.url %>">
            <%= whisper.name %> <%= whisper.version %>
            <span class="date"><%= whisper.created_at.strftime("%d %b %H:%M") %></span>
            <span class="info"><%= whisper.info %></span>
          </a>
        </li>
      <% end %>
    </ul>
  </body>
</html>
